<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Food Entry</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/diary" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="time" placeholder="time">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="item" placeholder="item">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="calories" placeholder="calories">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="details" placeholder="other details">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" href="/diary">Submit</button>
                </div>
            </form>
            <a href="/diary">Cancel</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
