<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>KeepDiet</title>
        <!-- Bootstrap CSS CDN -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!-- Our Custom CSS -->
        <link rel="stylesheet" href="/partials/style.css">
        <!-- Scrollbar Custom CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
    </head>
    <body>
        <div class="wrapper">
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>KeepDiet</h3>
                </div>
                <ul class="list-unstyled components">
                    <p>Dummy Heading</p>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active">
                        <a href="/groups">Groups</a>
                    </li>
                    <li>
                        <a href="/reward" data-toggle="collapse" aria-expanded="false">Reward</a>
                        <ul class="collapse list-unstyled" id="rewardSubmenu">
                            <li><a href="/reward">Home</a></li>
                            <li><a href="/reportprogress">Report Progress</a></li>
                            <li><a href="/groupprogress">Group Progress</a></li>
                            <li><a href="/deposit">Deposits</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <div id="content">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="loginBar">
                            <ul class="nav navbar-nav navbar-right">
                                <% if(!currentUser){ %>
                                <li><a href="/login">Login</a></li>
                                <li><a href="/register">Sign Up</a></li>
                                <% } else { %>
                                <li><a href="#">Signed As <%= currentUser.username %></a></li>
                                <li><a href="/logout">Logout</a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </nav>
                <header class="jumbotron">
                    <div class="container">
                        <h1>Welcome To KeepDiet!</h1>
                        <p>View our hand-picked groups from all over the world</p>
                        <p>
                            <a class="btn btn-primary btn-large" href="/groups/new">Create a New Group</a>
                        </p>
                    </div>
                </header>
                <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                    <% groups.forEach(function(group){ %>
                        <div class="col-md-3 col-sm-6">
                            <div class="thumbnail">
                                <img src="<%= group.image %>">
                                <div class="caption">
                                    <h4><%= group.name %></h4>
                                    <a href="/groups/<%= group._id %>" class="btn btn-primary btn-small">More Info</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>    
                </div>
            </div>
        </div>
        <!-- jQuery CDN -->
        <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
        <!-- Bootstrap Js CDN -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <!-- jQuery Custom Scroller CDN -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $("#sidebar").mCustomScrollbar({
                    theme: "minimal"
                });

                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar, #content').toggleClass('active');
                    $('.collapse.in').toggleClass('in');
                    $('a[aria-expanded=true]').attr('aria-expanded', 'false');
                });
            });
        </script>        
    </body>
</html>