<% include ../partials/header %>

<script type="text/javascript">
    $(document).ready(function () {
        $("#sidebar").mCustomScrollbar({
            theme: "minimal"
        });

        $('#sidebarCollapse').on('click', function () {
            $('#sidebar, #content').toggleClass('active');
            $('.collapse.in').toggleClass('in');
            $('a[aria-expanded=true]').attr('aria-expanded', 'false');
        });
    });
</script>  

    
    <h2 style="text-align: center">Join information</h2>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/groups/<%= group._id %>/members" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="member[firstname]" placeholder="First Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="member[lastname]" placeholder="Last Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="member[deposit]" placeholder="deposit">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="member[target]" placeholder="Personal Target">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="member[start]" placeholder="Start Date">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="member[end]" placeholder="End Date">
            </div>
            
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/groups">Go Back</a>
    </div>

<%include ../partials/footer %>